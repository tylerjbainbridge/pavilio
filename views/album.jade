extends layout
block content
  .topNav
    #logo PAVILLIO
  .mainCont
    #infoNav
      #albumArt
        img(src= "#{album.image}")
      #artistInfo
        #artist
          a(href="/artist/#{album.artistshortname}") #{album.artist}
        #album #{album.title}
    .reviews
  #reviews
    #critRevs Critic Reviews 
      #emptyspot
      #review
    #usrRevs User Reviews
      #emptyspot
      #review
        #userreviews
        form(role='form', action="/review/#{album.shortname}",method="post", style='max-width: 300px;')
          .form-group
            textarea.form-control(type='text', name="review", placeholder='review')
          .form-group
            input.form-control(type='text', name="score", placeholder='review')
          button.btn.btn-default(type='submit') Submit
        a(href='/')
          button.btn.btn-primary(type="button") Cancel
      script.
        var album = !{JSON.stringify(album)};
