extends layout

block content
    .container
        h1 Add Album
        p.lead Create an Album
        br
        form(role='form', action="/create/artist",method="post", style='max-width: 300px;')
            .form-group
                input.form-control(type='text', name="name", placeholder='Artist Name')
            .form-group
                input.form-control(type='text', name="image", placeholder='URL')
            button.btn.btn-default(type='submit') Submit
    a(href='/')
        button.btn.btn-primary(type="button") Cancel